rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  match /categories/{category} {
      allow read: if request.auth != null;
    }
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      match /transactions/{transaction} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}